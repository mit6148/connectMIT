    form(method = 'get', action='/')
      input.submitButtons#return-login(type="submit", value ="Return to Login")

    .panel.panel-default#password-panel

      .panel-heading
        h4(style="text-align: center;")
          | Reset Password
        
      .panel-body(style='padding: 15px; text-align: center')
        form#resetPassword(class = '#{email}')
          p
            | Enter new password: 
          input#password(type="password" style="margin-bottom: 10px; text-align: center;" name = "password" required)
          p
            | Confirm password:  
          input#confirmPassword(type="password" name = "passwordConfirm" style='text-align: center;')
          .break(style="margin-top: 20px;")
            input.submitButtons(type="submit", value="Reset" required)


