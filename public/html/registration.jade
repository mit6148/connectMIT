  body.index.editableProfile
    form(method = 'get', action='/')
      input.submitButtons#return-login(type="submit", value ="Return to Login")

    .panel.panel-default#registration-panel
      .panel-heading
        h4(style="text-align: center;")
          | Registration
        
      .panel-body(style='padding: 15px; text-align: center')
           form(method="post", action="/users/register" id='registrationForm')
            .form-group
              table.table(style="border: none;")
                tr
                  td(colspan='3' style='border-top: none;')
                    h3(style="color: #A31F34; border-bottom: 1px solid gray; text-align: left;")
                      | Account Setup
                tr
                  td(style='text-align: left; border: none;')
                    input.form-control(type='text', name = 'first' id = 'first' required)
                    label(style='margin-left: 10px;') First Name *
                  td(style='text-align: left; border: none;')
                    input.form-control(type='text', name = 'middle'  id = 'middle')
                    label(style='margin-left: 10px;') Middle Name
                  td(style='text-align: left; border: none;')
                    input.form-control(type='text', name = 'last' id = 'last' required)
                    label(style='margin-left: 10px;') Last Name * 
                tr
                  td(style='text-align: left; border: none;')
                    input.form-control(type='email', name = 'email' id = 'email' required)
                    label(style='margin-left: 10px;') MIT Email * 
                tr
                  td(style='text-align: left; border: none; width: 33.33%')
                    input.form-control(type='password', name = 'password' id = 'password' required)
                    label(style='margin-left: 10px;') Create password *
                  td(style='text-align: left; border: none; width: 33.33%')
                    input.form-control(type='password', name = 'passwordConfirm' id = 'passwordConfirm' required)
                    label(style='margin-left: 10px;') Reenter password * 
