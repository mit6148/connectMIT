doctype html
html
  head
    title connectMIT
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/stylesheet.css')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='/js/bootstrap.js')
    script(src='/js/notify.js')
    script(src='/js/controller.js')
    link(href='https://fonts.googleapis.com/css?family=Karla:400,700', rel='stylesheet')
  body.index.explore
    nav.navbar.navbar-default.navbar-static-top(style='background-color: #A31F34; border-bottom: 0;')
      section.container-fluid
        section.navbar-header
          a#homeTab.navbar-brand(href='#') connectMIT
        section.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li#userEmail(style="color: white; font-size: 15px; margin-right: 15px; margin-top: 15px") 
              | welcome #{email}
            li#exploreTab(style='background-color: #861A2B; width: 150px; text-align: center;')
              a(href='#') explore
            li#searchTab(style='background-color: #681422; width: 150px; text-align: center;')
              a(href='#') search
            li#myConnectionsTab(style='background-color: #4B0F18; width: 150px; text-align: center;')
              a(href='#', data-transition='slide') my connections
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown' style='background-color: #2D090F; width: 150px; text-align: center;') profile
              .dropdown-menu(style="text-align: center; width: 10px;")
                a#settingsTab(href='#' style="color: white;") settings
                p(style='white-space:pre; font-size: 2px;')
                  | &nbsp
                a#logoutBtn(href='#' style="color: white;") logout

    h1(style="text-align: center; padding-bottom: 10px;") e x p l o r e
    h4(style='text-align: center; font-size: 20px')
      | discover and connect with new students & alumni

    if user == null
      h1(style='text-align: center; margin-top: 200px;') no more users to connect with!
    else
      #explore-panel.panel.panel-default
        .panel-heading
        .panel-body
          .col-1-3
            p(style="font-size: 110px; margin-top: 80px;")
              | !{initials}
          .col-2-3
            .idk(style="background-color: #DDADB5; margin-left: 15px; padding: 10px; height: 43vh; ")
              .vert-align(style="position: relative; top: 50%; transform: translateY(-50%);")
                h2#login-heading(style="margin-bottom: 20px;" name='#{user.name}') !{user.name}
                table(style='width: 100%; text-align: left; font-size: 18px; margin-left: 30px; margin-right: 50px; word-wrap: break-word;')
                  tr
                    th(style='width: 50%;')
                      | Email
                    th
                      | Phone
                  tr
                    td(style='padding-bottom: 20px;')
                      | !{user.email}
                    td(style='padding-bottom: 20px;')
                      | !{user.phoneNumber}
                  tr
                    th
                      | Course(s)
                    if user.activities != null && user.activities != ''
                      th
                        | Activities
                  tr
                    td(style='padding-bottom: 20px;')
                      - each item in user.course
                        li=item
                    if user.activities != null && user.activities != ''
                      td(style='padding-bottom: 20px;')
                        - each item in user.activities
                          li=item
                table(style='width: 90%; font-size: 18px; text-align: left; margin-left: 30px;')
                  tr
                    th
                      | Address
                  tr
                    td(colspan='2' style='padding-bottom: 20px;')
                      | !{user.address}

      input.connection-buttons.inline#ignoreBtn(type='submit', value="maybe later")
      input.connection-buttons.inline#connectBtn(type='submit' class='#{user.email}' value='connect' style="float: right;")

