doctype html
html
  head
    title connectMIT
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/stylesheet.css')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='/js/bootstrap.js')
    link(href='https://fonts.googleapis.com/css?family=Karla', rel='stylesheet')
  body.index
    form(method = 'get', action='/')
      input.submitButtons#return-login(type="submit", value ="Return to Login")

    .panel.panel-default#password-panel
      .panel-heading
        h4(style="text-align: center;")
          | Forgot your password?
        
      .panel-body(style='padding: 15px; text-align: center')
        form(method="post" action="/users/forgot-password")
          p(style='white-space:pre;')
            | Enter the email you registered with, 
            | and we'll send you a link to reset
          input(type="email" style="margin-bottom: 10px; width: 60%;" name="email" required)
          .break
            input.submitButtons(type="submit", value="Send")
